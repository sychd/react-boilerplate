{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React application boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && webpack --config webpack.prod.js",
    "serve": "npx serve -p 9000 dist --single",
    "start": "NODE_ENV=development webpack serve --config webpack.dev.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint:es": "eslint 'src/**/*.{js,ts,jsx,tsx,json}'",
    "lint:style": "stylelint 'src/**/*.{css,scss}'",
    "lint": "npm run lint:es && npm run lint:style",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,md,json,css,scss}'",
    "analyze:open": "open dist/bundle-report.html",
    "coverage:open": "open coverage/index.html",
    "prepare": "husky install"
  },
  "author": "Denys Sych",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@svgr/webpack": "^6.5.1",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.4.3",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "css-loader": "^6.7.3",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-webpack-plugin": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.0",
    "mini-css-extract-plugin": "^2.7.3",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.4",
    "sass": "^1.59.3",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.2",
    "stylelint": "^15.2.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-prettier": "^3.0.0",
    "stylelint-scss": "^4.5.0",
    "stylelint-webpack-plugin": "^4.1.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.2",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "axios": "^1.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.9.0"
  },
  "lint-staged": {
    "*.(js|ts|tsx)": [
      "prettier --write",
      "eslint"
    ],
    "*.(css|scss)": [
      "prettier --write",
      "stylelint"
    ]
  }
}
